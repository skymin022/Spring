<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" -->
<mapper namespace="com.aloha.spring.mapper.BoardMapper">


	<!-- 게시글 목록  -->
	<!-- id			: 연결할 매퍼 인터페이스의 메소드명  -->
	<!-- resultType : 조회 결과를 매핑할 클래스 타입(패키지경로+클래스명) -->
<!-- 	<select id="list" resultType="com.aloha.spring.dto.Board"> -->
	<select id="list" resultType="Board">
		SELECT *
		FROM board
	</select>
	
	
	<!-- 게시글 조회 -->
	<!-- 매핑 파라미터 : #{파라미터명} -->
	<!-- 			  #{} 파라미터 개수가 1개라면, 이름과 무관하게 매핑된다 -->
	<select id="select" resultType="Board">
		SELECT *
		FROM board
		WHERE no = #{no}
	</select>
	
	<!-- 게시글 등록  -->
	<!-- parameterType : 매핑 파라미터에 연결될 클래스 타입을 지정하는 속성 
							* 생략 가능, 명시해놓고 싶은 경우 사용
	 -->
	 <!-- 매개변수로 Board 클래스를 지정하면, 
	 	  변수들이 자동으로 #{뱐스} 매핑 파라미터에 매핑된다.
	 -->
	 <!-- 
	 	#{index} 		: 파라미터를 순서대로 index에 매핑하여 사용 가능 
	  -->
	  <!-- ✅✅TODO : 여러 파라미터를 객체로 매핑하는 경우 -->
	<insert id="insert" parameterType="Board">
		INSERT INTO board (id, title, writer, content)
		VALUES ( #{id}, #{title}, #{writer}, #{content} )
	<!-- VALUSE ( #{0}, #{1}, #{2}, #{3} ) -->
	</insert>	
	
	<!-- 게시글 수정  -->
	<update id="update" parameterType="Board">
		UPDATE board 
			SET title = #{title}
			,writer = #{writer}
			,content = #{content}
			,updated_at = now()
		WHERE no = #{no}
		
	</update>
	<!-- 게시글 삭제  -->
	<delete id="delete">
		DELETE FROM board
		WHERE no = #{no}
	</delete>

</mapper>